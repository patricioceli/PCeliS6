<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PCeliS1.IngresoNotas">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana de registro"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="txtNombre" Placeholder="Ingrese su Nombre" ></Entry>
            <Entry x:Name="txtApellido" Placeholder="Ingrese su Apellido" ></Entry>
            <Entry x:Name="txtNota" Placeholder="Ingrese su Nota Final" Keyboard="Numeric" ></Entry>
            <Button x:Name="btnInformacion" Text="Mostrar Información" FontAttributes="Bold" TextColor="White" Clicked="btnInformacion_Clicked" BackgroundColor="Red" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>