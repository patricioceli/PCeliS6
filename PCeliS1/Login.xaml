<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PCeliS1.Login">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
          
            <Image x:Name="imgIcono" Source="itq"></Image>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario" ></Entry>
            <Entry x:Name="txtContrasena" Placeholder="Ingrese el password" IsPassword="True" ></Entry>
            <Button x:Name="btnIniciarSesion" Text="Iniciar Sesion" FontAttributes="Bold" TextColor="White" Clicked="btnIniciarSesion_Clicked" BackgroundColor="Red" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>